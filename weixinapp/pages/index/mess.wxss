/* pages/index/com.wxss */
page{
  width:100%;
  height:100%;
}
.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}
 
.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #BEBEBE;
}
 
.orderListTitle .userName {
  padding-right: 50rpx;
  margin-left:10px;
}
 
.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #BEBEBE;
  font-size: 34rpx;
}
 
.orderListDetails {
  display: flex;
  height: 220rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 

.orderListDetails .productInfo {
  flex: 4;
  margin: 30rpx 30px 30px 30rpx;
  font-size:15px;
 
}
 
.orderListDetails .productInfo .productTitle {
  font-size:15px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom:10px;
}
 
.productCount {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
 
.productCount>view {
  float: right;
  margin-right: 30rpx;
}

.input-style{
  width: 90%;
  height: 50px;
  border:1px solid #ccc;
  margin:10px auto;
}

.btn{
  width: 88%;
  margin:5px ;
}
.hot-box{
  position: absolute;
}
.down{
  line-height: 100rpx;
  flex: 0 0 100rpx;
}
.all{
   display: flex;
  flex-direction: column;
  width: 100%;
  height:100%;
}
.main{
    flex: 1;
  position: relative;
}