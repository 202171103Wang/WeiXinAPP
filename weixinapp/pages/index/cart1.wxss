/* pages/index/cart.wxss */
.ncart{
 display: flex;
  justify-content: center;
  color:  #FFD161;
}
.scroll {   
    margin-bottom: 120rpx; 
}
.cart_container {  
    display: flex;  
    flex-direction: row;  
    background-color: #FFFFFF;  
    margin-bottom: 10rpx;
}
.item-select {  
    width: 40rpx;  
    height: 40rpx;  
    margin-top: 90rpx;  
    margin-left: 20rpx;
}
.image {  
   width: 120rpx;
  height: 120rpx;
} 
.food-info{
  padding-left: 15rpx;
  line-height: 48rpx;
  flex: 1;
}
.name{
    color: black;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
}
.price{
  font-size: 30rpx;
  color: red;
}
.food-numb{
  height: 40rpx;
  width: 130rpx;
  display: flex;
  justify-content: flex-end;
  margin-top: 95rpx;
  margin-right: 30rpx;
  line-height: 40rpx;
  font-size: 25rpx;
}
.food-numb .add,.food-numb .remove{
  width: 40rpx;
  height: 40rpx;
  border-radius: 30rpx;
  text-align: center; 
}
.food-numb .add{
  font-size: 35rpx;
  line-height: 37rpx;
  font-weight: 700;
  background: #FFD161;
  margin-left: 15rpx;
}
.food-numb .remove{
  margin-right: 15rpx;
  line-height: 28rpx;
  font-size: 60rpx;
  font-weight: 500;
  box-sizing: border-box;
  border: 2rpx;
  border-style: solid; 
  border-color: #B0B0B0;
  color: #B0B0B0;
}
.del{
  font-size: 30rpx;
  color:red;
}
.bottom_total {  
    position: fixed;  
    display: flex;  
    flex-direction: column;  
    bottom: 0;  
    width: 100%;  
    height: 120rpx;  
    line-height: 120rpx;  
    background: white;  /* margin-top: 300rpx; */
    border-top: 1rpx solid #ccc;  z-index: 99;
}
.bottom_line {  
   width: 100%;  
    height: 2rpx;  
    background: lightgray;
} 
.row { 
    display: flex;  
    flex-direction: row;   
    align-items: center;

}
.item-allselect {  
    width: 40rpx;  
    height: 40rpx; 
    margin-left: 20rpx;   
    margin-top:25rpx;   
}
.small_text {  
    font-size: 28rpx;  
    margin-right: 40rpx;  
    margin-left: 25rpx;
}
.sku {  
    margin-left: 100rpx;  
    position: absolute;  
    right: 30rpx;  
    margin-top: 30rpx; 
}
.sku-price {  
    color: red;  
    position: relative;   
    margin-top: 30rpx; 
}
.price {  
    color: red;  
    position: relative;
}
.button-red {  
    background-color: #FFd161; 
    position: fixed;  
    right: 0;  
    color: white;  
    text-align: center;  
    display: inline-block;  
    font-size: 30rpx;  
    border-radius: 0rpx;  
    width: 30%;  
    height: 120rpx;  
    line-height: 120rpx;  /* border: 1rpx solid #ccc; */
}